<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a3imedia.ted.AboutCompanyScreen">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/epicone_icon" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview"
        android:gravity="left"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="5dp"
        android:padding="2dp"
        android:text="EpicOne Media is actually several companies in one. EpicOne is an independent creative visionary company. We work with you to create and promote your businesses, brands, products and services.
	We provide a vast array of media marketing services ranging from graphics, printing and advertising to web design, animation, video production and more.
" />
    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:gravity="center"
        android:text="proceed"
        android:onClick="proceedMethod"
        android:textAllCaps="true"
        android:padding="5dp"
        android:textSize="16sp"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>
