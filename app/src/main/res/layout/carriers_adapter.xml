<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bckcolor"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardparent"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_delete"
                android:layout_gravity="right"
                android:padding="5dp"
                android:id="@+id/delete_text_view"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/carrierphoto"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp" />


                <View
                    android:layout_width="2dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:src="@drawable/companys" />

                        <TextView
                            android:id="@+id/Companyname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:paddingLeft="5dp"
                            android:textColor="#8D8D8D"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:src="@drawable/phone" />

                        <TextView
                            android:id="@+id/mobileno"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:paddingLeft="5dp"
                            android:textColor="#8D8D8D"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:src="@drawable/designation" />

                        <TextView
                            android:id="@+id/designation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:paddingLeft="5dp"
                            android:textColor="#8D8D8D"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:src="@drawable/experiences" />

                        <TextView
                            android:id="@+id/experience"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:paddingLeft="5dp"
                            android:textColor="#8D8D8D"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:src="@drawable/locations" />

                        <TextView
                            android:id="@+id/locations"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:paddingLeft="5dp"
                            android:textColor="#8D8D8D"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:src="@drawable/vs_appointments" />

                        <TextView
                            android:id="@+id/endates"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:paddingLeft="5dp"
                            android:textColor="#8D8D8D"
                            android:textSize="12sp" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:src="@drawable/qualification" />

                <TextView
                    android:id="@+id/qualifications"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:textColor="#8D8D8D"
                    android:textSize="12sp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="Keyskills:"
                android:textColor="#8D8D8D"
                android:textSize="13sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/keyskills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:textColor="#8D8D8D"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/noticeperiod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|end"
                android:paddingRight="5dp"
                android:textColor="#8D8D8D"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>